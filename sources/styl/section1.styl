.section1
  background-color #fdfdfd
  background-image url("img/background-sec1.png")
  display flex
  flex-direction column-reverse
  padding-bottom 20px

  .sec1-slider
    width 100%
    display flex
    justify-content center
    align-items center
    padding 0 10px

    .slider-position
      min-width 282px
      max-width 500px
      height auto
      position relative

      .prevArrow
        position absolute
        top 125px
        left 30px
        z-index 1
        cursor pointer
      .nextArrow
        position absolute
        top 125px
        right 30px
        z-index 1
        cursor pointer

      .slidinline
        height auto
        box-shadow 4px 6px 10px #eaecec
        border-radius 2px
        border 1px solid #dddfe0
        background-color #ffffff
        padding-top 10px

        .img-slide
          display flex
          justify-content center
          align-items center

          img
            max-width 100%
            height auto
            padding 10px

        .slide-text
          color #000000
          font-family "DINPro"
          font-size 14px
          font-weight 500
          line-height 22px
          padding 10px 12px

          .price
            font-family "DINPro"
            font-size 12px
            line-height 11px
            color #000000
            font-weight 400
            margin-top 4px
            span
              color #f4b32c
              font-weight 500

  .info-content
    width 100%
    height auto
    display flex
    flex-direction column
    justify-content center
    align-items center
    padding 32px 0

    .text-content
      width 100%
      height auto
      p
        opacity 0.86
        color #000000
        font-family "DINPro"
        font-size 12px
        font-weight 400
        line-height 15px
        text-align center
      h1

        font-family "DINPro"
        font-size 24px
        font-weight 900
        line-height 28px
        color #000000
        text-align center
        margin-top 24px
        span
          color #f21919
          text-transform uppercase

      h3
        opacity 0.86
        color #000000
        font-family "DINPro"
        font-size 16px
        font-weight 500
        line-height 28px
        margin-bottom 29px
        text-align center

      h2
        font-family "DINPro"
        font-size 16px
        line-height 21px
        color #000000
        font-weight 400
        text-align center
        margin-bottom 14px
        span
          color #f21919
          font-weight 500

    form
      width 100%
      height auto
      display flex
      flex-direction column
      justify-content center
      align-items center

      input
        width 100%

      button
        margin-top 7px


