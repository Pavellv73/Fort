        align-items center

        p
          font-size 18px
          font-weight 400
          line-height 28px

        h2
          font-size 30px
          font-weight 900
          line-height 48px


      .advantages
        flex-direction column

        .advan-parnersposit
          width auto
          max-width 807px
          height auto
          display flex
          flex-direction column
          justify-content center
          align-items center

          .advantage-blocks
            flex-direction row
            padding-top 30px


            .advant-block

              .advant-img
                width 113px
                height 102px

                img
                  width 90px
                  height 90px

              p
                height auto
                font-size 17px
                font-weight 400
                line-height 22px

          .partners

            .partners-content
              flex-direction row
              justify-content space-between

              img
                margin 9px 0

        form
          padding-top 60px


          input
            width 343px
            height 54px
            background-color #eef2f7
          button
            width 343px
            height 54px
            img
              width 25px
              height 20px

