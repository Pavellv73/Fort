.section6
  width 100%
  height auto
  padding-bottom 39px


  .sec6-content
    width 100%
    height auto
    display flex
    flex-direction column
    justify-content center
    align-items center

    .sec6-head
      width 100%
      height auto
      display flex
      flex-direction column
      justify-content flex-start
      align-items center

      p
        height auto
        color #000000
        font-family "DINPro"
        font-size 12px
        font-weight 400
        line-height 28px
        text-align center

      h2
        height auto
        font-family "DINPro"
        font-size 13px
        font-weight 900
        line-height 28px
        color #000000
        text-align center
        span
          color #f21919

    .advantages
      width 100%
      height auto
      display flex
      flex-direction column
      justify-content flex-start
      align-items center

      .advan-parnersposit
        width auto
        height auto
        display flex
        flex-direction column
        justify-content center
        align-items center

        .advantage-blocks
          width 100%
          height auto
          display flex
          flex-direction column
          justify-content flex-start
          align-items center

          .advant-block
            width 100%
            height auto
            display flex
            flex-direction row
            justify-content flex-start
            align-items center

            .advant-img
              width 72px
              height 65px
              display flex
              justify-content center
              align-items center

              img
                width 65px
                height 65px

            p
              height 15px
              color #000000
              font-family "DINPro"
              font-size 12px
              font-weight 400
              line-height 15px

        .partners
          width 100%
          height auto

          .partners-content
            width auto
            height auto
            display flex
            flex-direction column
            justify-content: center
            align-items center

            img
              max-width 180px
              height 27px
              margin 9px 0

      form
        width 100%
        height auto
        display flex
        flex-direction column
        justify-content flex-start
        align-items center

        input
          width 100%

        button
          width 100%
          img
            width 25px
            height 20px

